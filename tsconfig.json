{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2020"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/renderer/*"
      ]
    }
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll"
  ]
}